<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_Cozma_Marian_Mobile.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="9" Margin="9">
        <HorizontalStackLayout Spacing="11">
            <Image Source="cinema.png"
                   SemanticProperties.Description="My Cinema"
                   HeightRequest="70" />
